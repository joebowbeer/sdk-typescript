{
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "target": "esnext",
    "module": "node16",
    "lib": ["esnext"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@restatedev/restate-sdk-core": [
        "./packages/restate-sdk-core/src/public_api.ts"
      ],
      "@restatedev/restate-sdk": ["./packages/restate-sdk/src/public_api.ts"],
      "@restatedev/restate-sdk-clients": [
        "./packages/restate-sdk-clients/src/public_api.ts"
      ]
    }
  }
}
