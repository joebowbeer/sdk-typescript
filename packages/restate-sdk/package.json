{
  "name": "@restatedev/restate-sdk",
  "version": "1.0.0",
  "description": "Typescript SDK for Restate",
  "author": "Restate Developers",
  "license": "MIT",
  "email": "code@restate.dev",
  "homepage": "https://github.com/restatedev/sdk-typescript#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/restatedev/sdk-typescript.git"
  },
  "bugs": {
    "url": "https://github.com/restatedev/sdk-typescript/issues"
  },
  "type": "module",
  "sideEffects": false,
  "main": "./dist/cjs/index.js",
  "types": "./dist/cjs/public_api.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/src/public_api.js",
      "require": "./dist/cjs/src/public_api.js",
      "types": "./dist/esm/src/public_api.d.ts"
    },
    "./cloudflare": {
      "import": "./dist/esm/src/cloudflare.js",
      "require": "./dist/cjs/src/cloudflare.js",
      "types": "./dist/esm/src/cloudflare.d.ts"
    },
    "./lambda": {
      "import": "./dist/esm/src/lambda.js",
      "require": "./dist/cjs/src/lambda.js",
      "types": "./dist/esm/src/lambda.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "gen:version": "node ./scripts/version.js",
    "proto": "npx buf mod update && npx buf generate",
    "prebuild": "npm run gen:version",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc --module commonjs --verbatimModuleSyntax false --moduleResolution node10 --outDir ./dist/cjs --declaration --declarationDir ./dist/cjs && echo >./dist/cjs/package.json '{\"type\":\"commonjs\"}'",
    "build:esm": "tsc --outDir ./dist/esm --declaration --declarationDir ./dist/esm",
    "pretest": "npm run gen:version",
    "test": "jest --silent --maxWorkers=1",
    "lint": "eslint --ignore-path .eslintignore --max-warnings=0 --ext .ts .",
    "format": "prettier --ignore-path .eslintignore --write \"**/*.+(js|ts|json)\"",
    "format-check": "prettier --ignore-path .eslintignore --check \"**/*.+(js|ts|json)\"",
    "verify": "npm run format-check && npm run lint && npm run test && npm run build",
    "release": "release-it"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^1.8.0",
    "@restatedev/restate-sdk-core": "^1.0.0"
  },
  "devDependencies": {
    "@bufbuild/buf": "^1.15.0",
    "@bufbuild/protoc-gen-es": "^1.8.0",
    "@types/aws-lambda": "^8.10.115",
    "@cloudflare/workers-types": "^4.20231016.0",
    "@types/jest": "^29.4.0",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.35.0",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">= 18"
  },
  "directories": {
    "example": "examples",
    "test": "test"
  },
  "publishConfig": {
    "@restatedev:registry": "https://registry.npmjs.org"
  }
}
